<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.vik.clickables.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_height="92dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/imageButton9"

            android:textColor="#000000"
            android:layout_alignRight="@+id/imageButton9"
            android:layout_alignEnd="@+id/imageButton9"
            android:layout_alignTop="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView3"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_above="@+id/imageButton8"

            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignStart="@+id/linearLayout6"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2">

        <ImageButton
        android:layout_width="wrap_content"
        android:src="@drawable/a"
        android:id="@+id/imageButton1"

            android:layout_above="@+id/imageButton5"
        android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:layout_weight="0.28" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:src="@drawable/b"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_weight="0.21" />
        <ImageButton
            android:layout_height="match_parent"
            android:src="@drawable/c"
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_alignEnd="@+id/imageButton3"
            android:layout_below="@+id/imageButton"
            android:layout_above="@+id/imageButton4" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2">


        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/d"
        android:id="@+id/imageButton4"

        android:layout_alignTop="@+id/imageButton2"
        android:layout_toLeftOf="@+id/imageButton6"
        android:layout_toStartOf="@+id/imageButton6" />

        <ImageButton
        android:layout_height="match_parent"
        android:src="@drawable/a1"
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"

        android:layout_below="@+id/imageButton8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.35" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b1"
        android:id="@+id/imageButton6"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.22" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton7"

            android:scaleType="centerCrop"
            android:src="@drawable/c1"
            android:layout_below="@+id/textView3"

            android:layout_alignRight="@+id/imageButton"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_above="@+id/imageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton8"
            android:src="@drawable/b2"
            android:layout_alignTop="@+id/imageButton9"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toLeftOf="@+id/linearLayout6"
            android:layout_toStartOf="@+id/linearLayout6"
            android:layout_weight="0.15" />

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageButton9"
        android:src="@drawable/d1"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageButton9"
        android:layout_toEndOf="@+id/imageButton9"
            android:layout_weight="0.22" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="338dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout6"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:layout_height="97dp">


        <ImageButton
            android:id="@+id/button"
            android:background="@drawable/p"
            android:onClick="startRand"
            android:text="START "
            android:textColor="@android:color/holo_red_light"
            android:textStyle="normal|bold"
            android:fontFamily="serif-monospace"
            android:typeface="serif"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_below="@+id/imageButton2"
            android:layout_alignRight="@+id/imageButton6"
            android:layout_alignEnd="@+id/imageButton6"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="95dp" />
    </LinearLayout>


</LinearLayout>






