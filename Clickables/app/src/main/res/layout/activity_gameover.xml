<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gameover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vik.clickables.Gameover">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:text="GAME OVER"
        android:gravity="center"
        android:textSize="50dp"
        android:textColor="#dd4141" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/tv3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="30"
        android:textSize="20sp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/tv1"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:layout_below="@+id/tv3"
        android:text="High Score: 50"
        android:textSize="20sp"
        android:layout_alignRight="@+id/tv2"
        android:layout_alignEnd="@+id/tv2"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="QUIT"
        android:id="@+id/button2"
        android:textColor="#df3030"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/tv1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="RETRY"
        android:id="@+id/button3"
        android:textSize="20sp"
        android:textColor="#df3030"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
